<mvc:View controllerName="sap.ui.demo.walkthrough.controller.Expression" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Panel headerText="{i18n>ExpressionTitle}" class="sapUiResponsiveMargin" width="auto">
		<content>
			<Input id="expression" valueLiveUpdate="true" width="60%"/>
			<Button id="calculateBtn" text="calculate" class="myCustomButton" press=".onCalculate"/>
		</content>
		<content>
			<Input id="result" value="{/result}" valueLiveUpdate="true" width="60%"/>
		</content>
	</Panel>
	<Panel class="sapUiResponsiveMargin" width="auto">
		<content>
			<Text id="errorText" text="{/message}" class="red"/>
		</content>
	</Panel>
</mvc:View>